<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Article">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="5">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/back" android:id="@+id/imageButton"
                    android:layout_weight="1" android:backgroundTint="#00FFFFFF" android:padding="-2"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF" android:background="#00FFFFFF" android:clickable="false"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_file_download_24px"
                    android:id="@+id/imageButton2" android:layout_weight="1" android:tint="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF" android:padding="-2"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_share_24px"
                    android:id="@+id/imageButton3" android:layout_weight="1" android:tint="#00FFFFFF"
                    android:backgroundTint="#00FFFFFF" android:padding="-2"/>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/boots"
                        android:id="@+id/imageView"/>
                <TextView
                        android:text="Flood in the White House"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="32"/>
                <TextView
                        android:text="Washinton DC, USA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="20"/>
                <TextView
                        android:text="A strong 6.8-magnitude  earthquake has rocked eastern Indonesia, reportedly killing one person and triggering a brief tsunami warning that sent panicked residents fleeing to higher ground.       "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="18"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>