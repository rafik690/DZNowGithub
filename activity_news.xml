<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".News" android:background="?bg_color">

    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/guideline5"
            android:layout_marginTop="4dp" android:id="@+id/topics" android:scrollbars="none">
        <fragment
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:name="com.example.dznow.topics_list"
                android:id="@+id/fragment9" tools:layout="@layout/fragment_topics_list"
        />
    </HorizontalScrollView>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.9"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp" android:name="com.example.dznow.navbars" android:id="@+id/fragment"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout="@layout/fragment_navbars"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
    />

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.96"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp" android:name="com.example.dznow.navbars_text"
            android:id="@+id/fragment2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout="@layout/fragment_navbars_text"
            app:layout_constraintTop_toTopOf="@+id/guideline2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.1"/>
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp" android:name="com.example.dznow.header"
            android:id="@+id/fragment3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" tools:layout="@layout/fragment_header"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fragment" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:id="@+id/scrollArticles"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="@+id/guideline5"
            android:scrollbars="none"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.2"/>

</android.support.constraint.ConstraintLayout>