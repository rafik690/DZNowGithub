<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".navbars"
              android:orientation="horizontal" android:id="@+id/container"
              android:background="@android:color/background_light">
    <ImageView
            android:src="@drawable/home"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/imageView5" android:layout_weight="1"
            android:textAlignment="center" android:contentDescription="@string/home" android:paddingTop="8dp"/>
    <ImageView
            android:src="@drawable/news"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/imageView6" android:layout_weight="1"
            android:textAlignment="center" android:contentDescription="@string/news" android:paddingTop="8dp"/>
    <ImageView
            android:src="@drawable/download"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/imageView7" android:layout_weight="1"
            android:textAlignment="center" android:contentDescription="@string/downloaded" android:paddingTop="8dp"/>
    <ImageView
            android:src="@drawable/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/imageView8" android:layout_weight="1"
            android:textAlignment="center" android:contentDescription="@string/settings" android:paddingTop="8dp"/>
</LinearLayout>