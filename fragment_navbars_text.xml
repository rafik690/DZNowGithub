<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".navbars_text" android:orientation="horizontal" android:textAlignment="center"
              android:background="@android:color/background_light">

    <TextView
            android:text="@string/home"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView21" android:layout_weight="1"
            android:fontFamily="@font/kalam" android:textColor="@color/darkGrey" android:textAlignment="center"
            android:gravity="center"/>
    <TextView
            android:text="@string/news"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView3" android:layout_weight="1"
            android:textAlignment="center" android:fontFamily="@font/kalam" android:textColor="@color/darkGrey"
            android:gravity="center"/>
    <TextView
            android:text="@string/downloaded"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView4" android:layout_weight="1"
            android:textAlignment="center" android:fontFamily="@font/kalam" android:textColor="@color/darkGrey"
            android:gravity="center"/>
    <TextView
            android:text="@string/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="1"
            android:textAlignment="center" android:fontFamily="@font/kalam" android:textColor="@color/darkGrey"
            android:gravity="center"/>
</LinearLayout>