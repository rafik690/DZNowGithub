<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".topics_list" android:orientation="horizontal"
        android:background="@android:color/background_light">

    <TextView
            android:text="@string/international"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/textView10" android:layout_weight="1"
            android:fontFamily="@font/kalam" android:textColor="@color/darkGrey"
            android:gravity="center"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:textSize="20sp"
            android:background="@color/white"/>
    <TextView
            android:text="@string/culture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/secondTopic" android:layout_weight="1"
            android:fontFamily="@font/kalam" android:textColor="@color/darkGrey" android:gravity="center"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:textSize="20sp"/>
    <TextView
            android:text="@string/sports"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/textView13" android:layout_weight="1"
            android:fontFamily="@font/kalam" android:textColor="@color/darkGrey" android:gravity="center"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:textSize="20sp"/>
    <TextView
            android:text="@string/politics"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/textView14" android:layout_weight="1"
            android:fontFamily="@font/kalam" android:textColor="@color/darkGrey" android:gravity="center"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:textSize="20sp"/>
    <TextView
            android:text="@string/economy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/textView15" android:layout_weight="1"
            android:fontFamily="@font/kalam" android:textColor="@color/darkGrey" android:gravity="center"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:textSize="20sp"/>
</LinearLayout>