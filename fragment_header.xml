<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".header" android:orientation="horizontal">

    <ImageView
            android:src="@drawable/small_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/imageView11" android:layout_weight="1"
            android:contentDescription="@string/logo"/>
    <ImageView
            android:src="@drawable/small_dz_now"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/imageView12" android:layout_weight="2"
            android:layout_marginStart="8dp" android:contentDescription="@string/app_name_logo"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/textView11" android:layout_weight="3"/>
</LinearLayout>