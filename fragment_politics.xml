<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".politics" android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1" android:background="?mini_bg_color"
            android:layout_margin="5dp" android:id="@+id/lay5">

        <ImageView
                android:src="@drawable/politics1"
                android:layout_width="90dp"
                android:layout_height="wrap_content" android:id="@+id/imageView11"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="New Congres Decision"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView11"
                app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageView11" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="20sp"/>
        <TextView
                android:text="Washington DC, USA"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/secondTopic"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintStart_toStartOf="@+id/textView11" android:textSize="12sp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Strong 6.8-magnitude earthquake has rocked "
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/secondTopic"
                app:layout_constraintStart_toStartOf="@+id/secondTopic" android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="4dp"/>
        <ImageView
                android:src="@drawable/share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView12"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textView13"
        />
        <ImageView
                android:src="@drawable/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView13"
                app:layout_constraintBottom_toBottomOf="@+id/imageView12"
                app:layout_constraintEnd_toStartOf="@+id/imageView12" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView12"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1" android:layout_margin="5dp"
            android:background="?mini_bg_color" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp">

        <ImageView
                android:src="@drawable/eco3"
                android:layout_width="90dp"
                android:layout_height="wrap_content" android:id="@+id/imageView19"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Terrorists Funding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/imageView19"
                app:layout_constraintStart_toEndOf="@+id/imageView19" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:textSize="20sp"/>
        <TextView
                android:text="Washington DC, USA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView24" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="12sp"/>
        <TextView
                android:text="Strong 6.8-magnitude earthquake has rocked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView23" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toStartOf="@+id/textView24" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="15sp"/>
        <ImageView
                android:src="@drawable/share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView21"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23"/>
        <ImageView
                android:src="@drawable/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView22"
                app:layout_constraintEnd_toStartOf="@+id/imageView21" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView21"
                app:layout_constraintTop_toTopOf="@+id/imageView21"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>